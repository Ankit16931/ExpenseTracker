@model ExpenseMvc.Models.mvcCategory
@{
    ViewBag.Title = "AddOrEdit";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                <div class="mb-3">
                                    @Html.HiddenFor(model => model.catId)
                                    <label for="categoryname" class="col-sm-2 col-form-label">Category Name</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.catName, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control",
                                                @name = "catName",
                                                @placeholder = "Enter Category Name"
                                            }
                                        })
                                        <span asp-validation-for="catName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="catExlimit" class="col-sm-2 col-form-label">Category Expense Limit </label>
                                    <div class="col-sm-10">

                                        @Html.EditorFor(model => model.catExlimit, new
                                        {
                                           htmlAttributes = new
                                            {
                                               @class = "form-control",
                                               @min = "1",
                                               @oninput = "validity.valid||(value='');",
                                               @name = "catExlimit",
                                               @placeholder = "Enter Category Expense Limit"
                                            }
                                       })
                                        <span asp-validation-for="catExlimit" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-0">
                                    <div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                                            Submit
                                        </button>
                                        <button type="reset" class="btn btn-secondary waves-effect">
                                            Cancel
                                        </button>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
        </div>
    </div>
</div>


