<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <a href="@Url.Action("AddOrEdit","Expense")" class="ui-icon-squaresmall-plus"><i class="ui-icon-squaresmall-plus"></i>Create New</a>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Expense</h4>

                            <div class="table-responsive">
                                <table class="table table-dark mb-0">

                                    <thead>
                                        <tr>
                                            <th>Expense Id</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Category</th>
                                            <th>Amount</th>
                                            <th>Category Id</th>
                                            <th>Date/Time</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.exId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.exName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.exDec)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.exCat)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.exAmount)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.catId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.exDateTime)
                                                </td>
                                                <td>
                                                    
                                                    <a href="@Url.Action("AddOrEdit","Expense", new{ id = item.exId})" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i>Edit</a>                                                  
                                                    <a onclick="Delete(@item.exId)" class="btn btn-secondary"><i class="fas fa-trash-alt"></i>Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != ''){
                alertify.success(successMessage);
            }
            });
        function Delete(id) {
            alertify.confirm('Expense Delete Opration', 'Are You Sure To Delete This Expense ? ', function () {
                window.location.href = '@Url.Action("Delete","Expense")/' + id;
            }, null);
        }
    </script>
