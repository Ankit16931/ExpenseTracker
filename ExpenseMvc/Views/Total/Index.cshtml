@model IEnumerable<ExpenseMvc.Models.mvcTotal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <a href="@Url.Action("AddOrEdit","Total")" class="ui-icon-squaresmall-plus"><i class="ui-icon-squaresmall-plus"></i>Create New</a>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Total</h4>

                        <div class="table-responsive">
                            <table class="table table-dark mb-0">

                                <thead>
                                    <tr>
                                        <th>Total Id</th>
                                        <th>Total Expense Limit</th>   
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.totId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.totEx)
                                            </td>                                            
                                            <td>
                                                <a href="@Url.Action("AddOrEdit","Total", new{ id = item.totId})" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i>Edit</a>                                                
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != ''){
                alertify.success(successMessage);
            }
            });
        
    </script>
}